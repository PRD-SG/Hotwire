<%= form_with model: stock do |form| %>
<%stock.errors.full_messages_for(:qty).each do |message| %>
<div class="alert alert-danger"><%= message %></div>
<% stock.errors.full_messages_for(:name).each do |message| %>
<div class="alert alert-danger"><%= message %></div>
<% end %> <% end %>
  <div class="col-md-12 d-flex justify-content-center">
    <div class="col-md-4">
      <%= form.label :name , class: "form-label" %><br />
      <%= form.text_field :name , class: "form-control mb-2", placeholder: "Name Product"%>
    </div>
  </div>
  <div class="col-md-12 d-flex justify-content-center">
    <div class="col-md-4">
      <%= form.label :qty , class: "form-label" %><br />
      <%= form.number_field :qty , class: "form-control mb-2" , placeholder:"Qty Product"%><br />
    </div>
  </div>
  <div class="col-md-12 d-flex justify-content-center">
    <div class="col-md-6 d-flex justify-content-evenly">
      <div class="col-md-3 d-flex justify-content-center">
        <%= link_to '<span class="material-icons">arrow_back</span>'.html_safe,root_path ,class: "btn btn-outline-dark btn-sm d-flexjustify-content-center"%>
      </div>
      <div class="col-md-3 d-flex justify-content-center">
        <%= form.submit class: "btn btn-outline-success " %>
      </div>
    </div>
  </div>

<% end %>
</div>
