<div class="container">
  <div class="row">
    <div class="col">
      <div class="title d-flex justify-content-center align-items-center shadow p-3 mb-3 mt-3 rounded">
        Stocks
      </div> 
      
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div class="create d-flex justify-content-center align-items-center">
        <%= link_to '<span class="material-icons">note_add</span>'.html_safe, new_stock_path, class: "btn btn-success btn-sm" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div class="create d-flex justify-content-center align-items-center">
        <div class="input-group mb-3 justify-content-center align-items-center">
          <%= search_form_for @q do |f| %> 
          <%= f.search_field:name_cont ,placeholder: 'Search stock...', class: 'form-control'%> 
        <%end%>
        </div>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div class="d-flex justify-content-center align-items-center">
        <table class="table table-striped">
          <thead class="table-hover">
            <td>No</td>
            <td><%= sort_link(@q, :name)  %></td>
            <td><%= sort_link(@q, :qty)  %></td>
            <td>Show</td>
            <td>Edit</td>
            <td>Delete</td>
          </thead>
          <% i = 1%> <% @stock.each do |item| %>
          <tr>
            <td><%= i %></td>
            <td><span style="float:left;"><%= item.name %></span></td>
            <td><%= item.qty %></td>
            <td>
              <%= link_to '<span class="material-icons ">find_in_page</span>'.html_safe, item, class: "btn btn-outline-dark btn-sm"%>

            </td>
            <td>
              <%= link_to '<span class="material-icons ">edit</span>'.html_safe, edit_stock_path(item), class: "btn btn-outline-dark btn-sm"%>
            </td>
            <td>
              <%= link_to  '<span class="material-icons ">delete</span>'.html_safe, stock_path(item), class: "btn
              btn-outline-danger btn-sm", method: :delete, data: { confirm: "Are
              you sure?" } %>
            </td>
          </tr>
          <%i+=1 end%>
        </table>
      </div>
    </div>
  </div>
</div>
