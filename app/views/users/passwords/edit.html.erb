<div class="container">
  <div class="row">
    <div class="col">
      <div class="input input_text d-flex justify-content-center align-items-center">Change your password</div>
    </div>
  </div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="row">
    <div class="col input">
      <div class="field input-group input">
    <%= f.label :password, "New password" ,class: "input-group-text" %><br />
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control" %>
  </div>
    </div>
  </div>

  <div class="row">
    <div class="col input">
      <div class="field input-group input">
    <%= f.label :password_confirmation, "Confirm new password",class: "input-group-text" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:"form-control"%>
  </div>
    </div></div>

 <div class="row">
    <div class="col">
      <div class="actions input">
        <%= f.submit "Change my password" ,class: "btn
        btn-outline-dark submit" %>
      </div>
    </div>
  </div>
<% end %>
<div class="row">
  <div class="col">
    <div class="actions input d-flex justify-content-end">
      <%= link_to "Log in", new_session_path(resource_name),class: "btn btn-outline-dark btn-sm" %><br />
    </div>
  </div>
</div>
<div class="row">
  <div class="col">
    <div class="actions input d-flex justify-content-end">
      <%= link_to "Sign up", new_registration_path(resource_name) ,class: "btn btn-outline-dark btn-sm"%><br />
    </div>
  </div>
</div>
</div>


  