<div class="container">
  <div class="row">
    <div class="col">
      <div
        class="
          input input_text
          d-flex
          justify-content-center
          align-items-center
        "
      >
        Forgot your password?
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col input">
      <%= form_for(resource, as: resource_name, url:
      password_path(resource_name), html: { method: :post }) do |f| %> <%=
      render "users/shared/error_messages", resource: resource %>
      <div class="field input-group input">
        <%= f.label :email , class: "input-group-text" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:
        "form-control" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div class="actions input">
        <%= f.submit "Send me reset password instructions" ,class: "btn
        btn-outline-dark submit" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div class="actions input d-flex justify-content-end">
        <%= link_to "Log in", new_session_path(resource_name),class: "btn btn-outline-dark btn-sm" %><br />
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div class="actions input d-flex justify-content-end">
        <%= link_to "Sign up", new_registration_path(resource_name) ,class: "btn btn-outline-dark btn-sm"%><br />
      </div>
    </div>
  </div>
</div>
<%end%>
