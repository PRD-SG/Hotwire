<div class="container">
  <div class="row g-3">
    <div class="col-md-12">
      <div class="title_page d-flex justify-content-center align-items-center">
        Forgot your password?
      </div>
    </div>
  </div>
  <div class="row g-3 ">
    <div class="col-md-12 d-flex justify-content-center">
      <div class="col-md-6">
        <div class="col-md-12 d-flex justify-content-center align-items-center">
          <%= form_for(resource, as: resource_name, url:password_path(resource_name), html: { method: :post }) do |f| %> 
          <%=render "users/shared/error_messages", resource: resource %>
        </div>
      </div>
    </div>
    <div class="col-md-12 d-flex justify-content-center">
      <div class="col-md-6">
        <%= f.label :email , class: "form-label" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control mt-2" %>
      </div>
    </div>
    <div class="col-md-12 d-flex justify-content-center">
        <div class="actions">
          <%= f.submit "Send me reset password instructions" ,class: "btn btn-outline-dark btn-sm mt-2 mb-2" %>
        </div>
    </div>
  </div>
  <div class="row g-3 d-flex justify-content-center">
    <div class="col-md-6">
      <div class="col-md-12 d-flex justify-content-end">
        <div class="actions">
          <%= link_to "Sign in", new_session_path(resource_name),class: "btn btn-outline-secondary btn-sm mt-2 mb-2"%><br />
        </div>
    </div>
    <div class="col-md-12 d-flex justify-content-end">
      <div class="actions">
        <%= link_to "Sign up", new_registration_path(resource_name),class: "btn btn-outline-secondary btn-sm mt-2 mb-2"%><br />
      </div>
    </div>
  </div>
</div>
<%end%>
