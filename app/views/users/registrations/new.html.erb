<div class="container">
  <div class="row">
    <div class="col">
      <div
        class="input input_text d-flex justify-content-center align-items-center">
        Sign up
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col input">
      <%= form_for(resource, as: resource_name, url:registration_path(resource_name)) do |f| %> 
      <%= render "users/shared/error_messages", resource: resource %>
    </div>
  </div>
  <div class="row">
    <div class="col input">
      <div class="field input-group input">
        <%= f.label :email, class: "input-group-text" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:
        "form-control" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col input">
      <div class="field input-group input">
        <%= f.label :password, class: "input-group-text" %> 
        <%= f.password_field :password, autocomplete: "new-password", class:
        "form-control" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col input">
      <div class="field input-group input">
        <%= f.label :password_confirmation , class: "input-group-text"%><br />
        <%= f.password_field :password_confirmation, autocomplete:
        "new-password", class:"form-control" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div class="actions input ">
        <%= f.submit "Sign up" ,class: "btn btn-outline-dark submit" %>
      </div>
    </div>
  </div>
  <% end %>
  <div class="row">
    <div class="col">
      <div class="actions input d-flex justify-content-end">
        <%= link_to "Log in", new_session_path(resource_name),class: "btn btn-outline-dark btn-sm" %><br />
      </div>
    </div>
  </div>
</div>
